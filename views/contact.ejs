<!doctype html>
<% include partials/header %>
<body>
<main class="mdl-layout__content">
            <div class="mdl-grid portfolio-max-width portfolio-contact">
                <div class="mdl-cell mdl-cell--12-col mdl-card mdl-shadow--4dp">
                    <div class="mdl-card__title">
                        <h2 class="mdl-card__title-text">Contact</h2>
                    </div>
                    <div class="mdl-card__media">
                        <img class="article-image" src="./images/contact.jpg" border="0" alt="contact image">
                    </div>
                    <div class="mdl-card__supporting-text">
                        <h2 style="padding-left: 50px;">
                            Contact Me :-
                        </h2    >
                        <form method="POST" action="/contact" id="contact-form" role="form">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <input class="mdl-textfield__input" type="text" id="email" name="email" placeholder="Your Email">
                                <label class="mdl-textfield__label" for="email"></label>
                            </div>
                    
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <textarea class="mdl-textfield__input" type="text" rows="3" id="message" name="message" placeholder="Your Message"></textarea>
                    
                                <label class="mdl-textfield__label" for="message"></label>
                            </div>
                            <br>
                            <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" type="submit">
                                Submit
                            </button>
                    </form>
                    <div style="padding: 30px 0px 30px 50px">
                        <section class="col-lg-12-col-md-12-col-sm-12 col-xs-12 social">
                            <a href="https://www.linkedin.com/in/simonpawar4/"><img src="images/linkedin.png" alt="linkedin 
                              logo" />
                            </a>
                            <a href="https://www.facebook.com/simon.n.pawar"><img src="images/facebook.png" alt=
                              "facebook logo" />
                            </a>
                        </section>
                        </div>
                    </div>
                </div>
            </div>
        </main>   
        </div>
    </div>
    <% include partials/footer %>

    <script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
</body>

</html>
